<div class="row">
  {{#each edad}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
        Alumno: {{ nombre_alumno }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>rut: {{ rut }} </p>
        <p>edad: {{ edad }} </p>
        <p>curso: {{ curso }} </p>
        <p>ciudad: {{ ciudad }} </p>
        <p>sexo: {{ sexo }} </p>
        <p>direccion: {{ direccion }} </p>
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>